<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #FFC0CB;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.crud.MakeNoteController">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="193.0" spacing="20.0" style="-fx-background-color: #FFC0CB;">
            <children>
                <Button fx:id="btnMakeNote" mnemonicParsing="false" onAction="#MakeNote" prefHeight="26.0" prefWidth="142.0" style="-fx-background-color: #912222;" text="Make entry" textFill="WHITE">
                    <VBox.margin>
                        <Insets top="70.0" />
                    </VBox.margin></Button>
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#Back" prefHeight="26.0" prefWidth="144.0" style="-fx-background-color: #4682B4;" text="Back" textFill="WHITE" />
            </children>
        </VBox>
      <VBox style="-fx-background-color: #912222;">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <children>
            <TextField fx:id="txtTitle" promptText="Enter title ">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
              <TextArea fx:id="txtContent" prefHeight="400.0" prefWidth="309.0" promptText="Your notes here...">
                  <padding>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
              </TextArea>
         </children>
      </VBox>
    </children>
</HBox>
